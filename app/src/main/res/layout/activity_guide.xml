<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mydell.taskit.Guide"
    android:background="#005582"
    android:orientation="vertical">




        <TextView
            android:text="SPEAK FOLLOWING KEYWORDS TO PERFORM CORRESPONDING ACTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textSize="20dp"
            android:textStyle="italic|bold"
            android:layout_marginBottom="25dp"
            android:textColor="#ffffff"/>



        <TextView
            android:text="1. 'ADD TRIGGER' to open add trigger menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="16dp"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"/>
        <TextView
            android:text="2. 'OPEN FORUM' to open Forum login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="0.00"
            android:textSize="16dp"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"/>
        <TextView
            android:text="3. 'ON BLUETOOTH' to turn on your bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="0.00"
            android:textSize="16dp"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"/>
        <TextView
            android:text="4. 'OFF BLUETOOTH' to turn off your bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="0.00"
            android:textSize="16dp"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"/>
        <TextView
            android:text="5. 'ON FLASHLIGHT' to turn on your flashlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="0.00"
            android:textSize="16dp"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"/>

        <TextView
            android:text="6. &apos;OFF FLASHLIGHT&apos; to turn off your flashlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="0.00"
            android:textSize="16dp"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
